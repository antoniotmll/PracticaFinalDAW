<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initialscale=
1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet"
          type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet"
          type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    @RenderSection("css", false)
</head>
<body>
    <nav class="navbar navbar-dark bg-dark fixed-top">
        <div class="container">
            @Html.ActionLink("MercaF1", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            @Html.ActionLink("Coches", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            @Html.ActionLink("Comprar", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            @Html.ActionLink("Contacta", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <form class="form-inline">
            <input class="form-control mr-sm-2" type="search" placeholder="Buscar" aria-label="Buscar">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar</button>
        </form>
    </nav>
    <main class="container" style="margin-top:10px;">
        @RenderBody()
    </main>
    <footer class="container">
        <hr />
        <p>
            &copy; @DateTime.Now.Year - DAW
        </p>
    </footer>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("javascript", false)
</body>
</html>